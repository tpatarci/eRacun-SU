#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Conventional Commits validation
# Format: <type>(<scope>): <description>
# Example: feat(cert-manager): add certificate renewal

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commits
commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\([a-z0-9-]+\))?: .{1,100}'

# Skip merge commits and revert commits
if echo "$commit_msg" | grep -qE "^Merge branch|^Revert"; then
  exit 0
fi

# Validate commit message
if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo ""
  echo "  <type>(<scope>): <description>"
  echo ""
  echo "Types:"
  echo "  - feat:     New feature"
  echo "  - fix:      Bug fix"
  echo "  - docs:     Documentation changes"
  echo "  - style:    Code style changes (formatting, etc.)"
  echo "  - refactor: Code refactoring"
  echo "  - perf:     Performance improvements"
  echo "  - test:     Adding or updating tests"
  echo "  - chore:    Maintenance tasks"
  echo "  - build:    Build system changes"
  echo "  - ci:       CI/CD changes"
  echo "  - revert:   Revert previous commit"
  echo ""
  echo "Examples:"
  echo "  ✅ feat(cert-manager): add certificate renewal"
  echo "  ✅ fix(fina-connector): resolve timeout issue"
  echo "  ✅ docs(readme): update installation guide"
  echo ""
  echo "Your message:"
  echo "  ❌ $commit_msg"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid"
