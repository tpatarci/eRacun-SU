{
  "name": "@eracun/pdf-parser",
  "version": "1.0.0",
  "description": "PDF invoice parser service - extracts structured data from PDF documents",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --loader ts-node/esm' jest --config jest.config.ts",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --loader ts-node/esm' jest --config jest.config.ts --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --loader ts-node/esm' jest --config jest.config.ts --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "pdf",
    "parser",
    "invoice",
    "extraction",
    "eracun"
  ],
  "author": "eRacun Team",
  "license": "UNLICENSED",
  "dependencies": {
    "pdf-parse": "^1.1.1",
    "amqplib": "^0.10.3",
    "prom-client": "^15.1.0",
    "pino": "^8.19.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/sdk-trace-node": "^1.21.0",
    "@opentelemetry/sdk-trace-base": "^1.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/jest": "^29.5.12",
    "@types/amqplib": "^0.10.4",
    "@types/pdf-parse": "^1.1.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
