# Service Configuration
SERVICE_NAME=kpd-registry-sync
HTTP_PORT=8088
GRPC_PORT=50052

# DZS KLASUS API
DZS_KLASUS_API_URL=https://api.dzs.hr/klasus/v1/codes
DZS_KLASUS_VERSION=2025
DZS_API_KEY=<if required by DZS>

# PostgreSQL
DATABASE_URL=postgresql://kpd_user:CHANGE_ME@localhost:5432/eracun
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Sync Schedule
SYNC_CRON=0 3 * * *     # Daily at 3 AM
SYNC_ON_STARTUP=true    # Sync immediately on service start
SYNC_TIMEOUT_MS=120000  # 2 minutes

# Observability
LOG_LEVEL=info          # error | warn | info | debug
PROMETHEUS_PORT=9093
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACE_SAMPLE_RATE=1.0   # 100% sampling

# Performance
HTTP_REQUEST_TIMEOUT_MS=30000
DB_QUERY_TIMEOUT_MS=10000
