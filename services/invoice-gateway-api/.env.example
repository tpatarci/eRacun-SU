# Invoice Gateway API Configuration

# Environment
NODE_ENV=development
ENVIRONMENT=development
PORT=3001
SERVICE_NAME=invoice-gateway-api

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Message Bus
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_PREFETCH=10
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=invoice-gateway-api

# Database
DATABASE_URL=postgresql://eracun:eracun@localhost:5432/eracun
DATABASE_POOL_SIZE=20

# Redis (for idempotency and caching)
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
JWT_SECRET=development-secret-change-in-production
CERTIFICATE_PATH=/etc/eracun/certs

# Feature Flags
USE_MOCK_SERVICES=true
