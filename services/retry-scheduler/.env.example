# Service Configuration
SERVICE_NAME=retry-scheduler
HTTP_PORT=8086
PROMETHEUS_PORT=9094
LOG_LEVEL=info
NODE_ENV=production

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RETRY_QUEUE=retry.scheduled
MANUAL_REVIEW_QUEUE=manual-review.pending
RABBITMQ_PREFETCH=10

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eracun
POSTGRES_USER=eracun
POSTGRES_PASSWORD=<encrypted-with-sops>
POSTGRES_POOL_MIN=10
POSTGRES_POOL_MAX=50

# Retry Configuration
DEFAULT_MAX_RETRIES=3
BASE_DELAY_MS=2000
MAX_DELAY_MS=60000
RETRY_POLL_INTERVAL_MS=10000

# OpenTelemetry Tracing
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=retry-scheduler
OTEL_TRACES_SAMPLER=always_on
