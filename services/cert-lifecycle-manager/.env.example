# Service Configuration
SERVICE_NAME=cert-lifecycle-manager
HTTP_PORT=8087
PROMETHEUS_PORT=9095
LOG_LEVEL=info
NODE_ENV=production

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eracun
POSTGRES_USER=eracun
POSTGRES_PASSWORD=<encrypted-with-sops>
POSTGRES_POOL_MIN=10
POSTGRES_POOL_MAX=50

# Certificate Storage
CERT_DIRECTORY=/etc/eracun/secrets/certs
SOPS_AGE_KEY_PATH=/etc/eracun/.age-key

# Notification Service
NOTIFICATION_SERVICE_URL=http://notification-service:8085

# Expiration Monitoring
EXPIRATION_CHECK_CRON=0 9 * * *
EXPIRATION_ALERT_DAYS=30,14,7,1

# OpenTelemetry Tracing
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=cert-lifecycle-manager
OTEL_TRACES_SAMPLER=always_on
