# Certificate Lifecycle Manager - Environment Configuration
# Copy this file to .env and fill in actual values

# Service Configuration
SERVICE_NAME=cert-lifecycle-manager
HTTP_PORT=8087
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://cert_manager:password@localhost:5432/eracun

# Certificate Storage
CERT_DIRECTORY=/etc/eracun/secrets/certs
SOPS_AGE_KEY_PATH=/etc/eracun/.age-key

# Expiration Alert Thresholds (days)
ALERT_THRESHOLD_INFO=30
ALERT_THRESHOLD_WARNING=14
ALERT_THRESHOLD_CRITICAL=7
ALERT_THRESHOLD_URGENT=1

# Cron Schedule for Expiration Monitoring
# Default: Daily at 9 AM (0 9 * * *)
EXPIRATION_CHECK_CRON=0 9 * * *

# Run initial expiration check on startup (true/false)
RUN_INITIAL_CHECK=true

# Notification Service Integration
NOTIFICATION_SERVICE_URL=http://notification-service:8080

# Alert Recipients
ADMIN_EMAILS=admin@eracun.hr,security@eracun.hr
ADMIN_PHONES=+385991234567,+385991234568
ALERT_WEBHOOKS=https://example.com/webhook

# FINA CMS API (optional, for future automation)
FINA_CMS_URL=https://cms.fina.hr/api
FINA_CMS_API_KEY=<encrypted>

# Development/Testing
USE_CONSOLE_ALERTS=false
DEBUG_TESTS=false
