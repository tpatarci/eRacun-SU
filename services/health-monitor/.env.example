# =============================================
# Health Monitor Service - Environment Variables
# =============================================

# Service Configuration
NODE_ENV=production
LOG_LEVEL=info
HTTP_PORT=8084

# Service Registry
SERVICE_REGISTRY_CONFIG=/etc/eracun/config/services.json

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000
FAILURE_THRESHOLD=3

# External Dependencies - RabbitMQ
RABBITMQ_MANAGEMENT_URL=http://rabbitmq:15672
RABBITMQ_USER=guest
RABBITMQ_PASS=CHANGE_ME

# External Dependencies - PostgreSQL
DATABASE_URL=postgresql://health_user:CHANGE_ME@localhost:5432/eracun

# External Dependencies - Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_HEALTH_TOPIC=system-health

# External Dependencies - FINA (Optional)
FINA_API_URL=https://cistest.apis-it.hr:8449

# Notification Service
NOTIFICATION_SERVICE_URL=http://notification-service:8080

# Observability
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
