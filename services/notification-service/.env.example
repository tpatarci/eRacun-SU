# Service Configuration
SERVICE_NAME=notification-service
HTTP_PORT=8085
PROMETHEUS_PORT=9093
LOG_LEVEL=info
NODE_ENV=production

# SMTP Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@eracun.hr
SMTP_PASSWORD=<encrypted-with-sops>
SMTP_FROM=noreply@eracun.hr
SMTP_FROM_NAME=eRacun Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=<encrypted-with-sops>
TWILIO_FROM_NUMBER=+385xxxxxxxxx

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
NOTIFICATION_QUEUE=notifications.send
RABBITMQ_PREFETCH=10

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eracun
POSTGRES_USER=eracun
POSTGRES_PASSWORD=<encrypted-with-sops>
POSTGRES_POOL_MIN=10
POSTGRES_POOL_MAX=50

# Rate Limits
EMAIL_RATE_LIMIT_PER_MINUTE=100
SMS_RATE_LIMIT_PER_MINUTE=10
WEBHOOK_RATE_LIMIT_PER_SECOND=100

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_BASE_MS=1000

# OpenTelemetry Tracing
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=notification-service
OTEL_TRACES_SAMPLER=always_on
