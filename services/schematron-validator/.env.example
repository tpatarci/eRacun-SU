# Schematron Validator Service - Environment Configuration
#
# Copy this file to .env and fill in appropriate values for your environment.
# NEVER commit .env files with real credentials to git.

# ============================================================================
# RabbitMQ Configuration
# ============================================================================

RABBITMQ_URL=amqp://localhost:5672
# Production:
# RABBITMQ_URL=amqp://eracun:PASSWORD@rabbitmq.eracun.internal:5672

# ============================================================================
# HTTP Server Configuration
# ============================================================================

# Health endpoints port (liveness, readiness)
HTTP_PORT=8081

# Prometheus metrics port
PROMETHEUS_PORT=9101

# ============================================================================
# Schematron Rules Configuration
# ============================================================================

# Path to Schematron rule files
SCHEMATRON_RULES_PATH=./rules

# Validation timeout (milliseconds)
VALIDATION_TIMEOUT_MS=10000

# ============================================================================
# Observability Configuration
# ============================================================================

# Jaeger tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=14268

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# ============================================================================
# Application Configuration
# ============================================================================

NODE_ENV=development
# Production:
# NODE_ENV=production
