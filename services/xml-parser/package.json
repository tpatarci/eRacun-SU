{
  "name": "@eracun/xml-parser",
  "version": "1.0.0",
  "description": "XML parsing and validation service for Croatian e-invoices (UBL 2.1, EN 16931)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "xml",
    "parser",
    "ubl",
    "e-invoice",
    "validator",
    "en-16931"
  ],
  "author": "eRacun Platform Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.0.0",
    "amqplib": "^0.10.3",
    "fast-xml-parser": "^4.3.2",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/auto-instrumentations-node": "^0.40.1",
    "@opentelemetry/exporter-jaeger": "^1.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "fast-check": "^3.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
