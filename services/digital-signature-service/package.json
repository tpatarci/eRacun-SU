{
  "name": "@eracun/digital-signature-service",
  "version": "0.1.0",
  "description": "XMLDSig digital signature service for UBL invoices with FINA certificates",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.config.ts --coverage",
    "test:properties": "NODE_OPTIONS='--experimental-vm-modules --loader tsx' jest --config jest.properties.config.js --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "node-forge": "^1.3.1",
    "xml2js": "^0.6.2",
    "xml-crypto": "^4.1.0",
    "express": "^4.18.2",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/exporter-jaeger": "^1.18.1",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/node-forge": "^1.3.10",
    "@types/xml2js": "^0.4.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "ts-jest": "^29.1.1",
    "fast-check": "^3.15.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "eracun",
    "invoice",
    "xmldsig",
    "signature",
    "fina",
    "certificate",
    "x509"
  ],
  "author": "eRacun Development Team",
  "license": "UNLICENSED",
  "private": true
}
