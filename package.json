{
  "name": "eracun-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "eRacun Invoice Processing Platform - Monorepo",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"services/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"services/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "typecheck": "npm run typecheck:services",
    "typecheck:services": "for dir in services/*/; do (cd \"$dir\" && [ -f tsconfig.json ] && echo \"Type-checking $(basename $dir)...\" && npm run build --if-present) || true; done",
    "test": "npm run test:all",
    "test:all": "node ./scripts/run-service-tests.mjs",
    "test:properties": "SERVICE_TEST_MODE=properties node ./scripts/run-service-tests.mjs",
    "check:architecture": "./scripts/check-architecture-compliance.sh",
    "chaos:database": "cd tests/chaos && chmod +x database-failure.sh && ./database-failure.sh",
    "chaos:rabbitmq": "cd tests/chaos && chmod +x rabbitmq-failure.sh && ./rabbitmq-failure.sh",
    "chaos:network": "cd tests/chaos && chmod +x network-latency.sh && ./network-latency.sh",
    "chaos:cpu": "cd tests/chaos && chmod +x cpu-throttle.sh && ./cpu-throttle.sh",
    "chaos:memory": "cd tests/chaos && chmod +x memory-pressure.sh && ./memory-pressure.sh",
    "chaos:cascade": "cd tests/chaos && chmod +x cascading-failure.sh && ./cascading-failure.sh",
    "chaos:partition": "cd tests/chaos && chmod +x network-partition.sh && ./network-partition.sh",
    "chaos:smoke": "cd tests/chaos && chmod +x run-smoke.sh && ./run-smoke.sh",
    "chaos:full": "cd tests/chaos && chmod +x run-full.sh && ./run-full.sh",
    "check:all": "npm run lint && npm run format:check && npm run typecheck && npm run check:architecture"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
